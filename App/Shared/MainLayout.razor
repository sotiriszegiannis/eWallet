@inherits LayoutComponentBase
@using eWallet.Components
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

 <MudLayout>
        <MudAppBar>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            eWallet
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen">
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
        <MudAppBar Bottom="true" Fixed="true" Color="Color.Info" Elevation="1">
            <DailyTransactionSummary></DailyTransactionSummary>
        </MudAppBar>
    </MudLayout>

@code {
    bool _drawerOpen = false;   
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}